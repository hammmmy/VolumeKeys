<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/widget_margin">


    <ImageView
        android:id="@+id/mute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_gap_margin"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:padding="@dimen/widget_margin"
        android:src="@drawable/ic_volume_off_white_36dp" />

    <ImageView
        android:id="@+id/volume_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_gap_margin"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:padding="@dimen/widget_margin"
        android:src="@drawable/ic_remove_circle_outline_white_36dp" />

    <ImageView
        android:id="@+id/volume_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_gap_margin"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:padding="@dimen/widget_margin"
        android:src="@drawable/ic_add_circle_outline_white_36dp" />


    <ImageView
        android:id="@+id/action_button_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_gap_margin"
        android:layout_weight="1"
        android:padding="@dimen/widget_margin"
        android:src="@drawable/ic_more_horiz_white_36dp" />


</LinearLayout>